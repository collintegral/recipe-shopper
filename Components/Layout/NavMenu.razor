@inject Auth Auth
@inject NavigationManager Navigation

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Recipe Shopper</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill nav-item-icon" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (Auth.LoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/recipes">
                    <span class="bi bi-card-list nav-item-icon" aria-hidden="true"></span> Recipes
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/recipes/new">
                    <span class="bi bi-card-text nav-item-icon" aria-hidden="true"></span> New Recipe
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/cart">
                    <span class="bi bi-cart4 nav-item-icon" aria-hidden="true"></span> Shopping List
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/logout">
                    <span class="bi bi-person-dash nav-item-icon" aria-hidden="true"></span> Log Out
                </NavLink>
            </div>
        }
        @if (!Auth.LoggedIn) {
            <div class="nav-item px-3">
            <NavLink class="nav-link" href="/login">
                <span class="bi bi-person nav-item-icon" aria-hidden="true"></span> Login/Sign Up
            </NavLink>
        </div>
        }
    </nav>
</div>